@using Microsoft.AspNetCore.Components.Web
@using static Microsoft.AspNetCore.Components.Web.RenderMode
@namespace Web.Animals
@page "/animals/{id:guid}"
@rendermode InteractiveServer

<PageTitle>@(Animal?.Name ?? string.Empty)</PageTitle>

<h1>@(Animal?.Name ?? string.Empty)</h1>

<div>
    <label>Name</label>
    <span>@(Animal?.Name ?? string.Empty)</span>
    <label>Kind</label>
    <span>@Animal?.Kind.ToString()</span>
    <label>Sex</label>
    <span>@Animal?.Sex.ToString()</span>
</div>

@if(Animal is not null)
{
    <button id="updateButton" class="btn btn-primary" @onclick="NavigateToUpdateAnimalPage">Update Animal</button>
    <button id="deleteButton" class="btn btn-primary" @onclick="DeleteAnimalAsync">Delete Animal</button>
    @if(HasDeletionErrors)
    {
        <div>@DeletionErrorMessage</div>
    }
}
